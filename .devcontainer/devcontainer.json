{
  "name": "Eleventy Dev Container",
  // Use Microsoftâ€™s pre-built image https://mcr.microsoft.com/en-us/artifact/mar/devcontainers/javascript-node/tags
  "image": "mcr.microsoft.com/devcontainers/javascript-node:22",

  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
      },
      "extensions": [
        "ms-vscode.vscode-node-graphql",   // Node helpers
        "esbenp.prettier-vscode",          // Formatting
        "dbaeumer.vscode-eslint"           // Linting
      ]
    }
  },

  // Install 11ty & project deps once the container is ready
  "postCreateCommand": "npm install",

  // Expose Eleventy dev-server
  "forwardPorts": [8080],

  "remoteUser": "vscode"
}
