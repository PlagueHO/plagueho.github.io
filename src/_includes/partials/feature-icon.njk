{# Render a small icon for a given feature string. Expand as needed! #}
{% set iconMap = {
  "Azure": "azure.svg",
  "Azure AI": "azure-ai.svg",
  "Bicep": "bicep.png",
  "C#": "csharp.svg",
  "DotNet": "dotnet.png",
  "Python": "python.svg",
  "PowerShell": "powershell.png",
  "TypeScript": "typescript.svg",
  "Semantic Kernel": "semantickernel.png"
} %}
{% set icon = iconMap[feature] %}
{% if icon %}
  <span class="button" data-small-button-tag data-icon-only>
    <img src="/assets/icons/{{ icon }}" alt="{{ feature }} icon" />
  </span>
{% endif %}

